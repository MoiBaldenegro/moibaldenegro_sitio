---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  * {
    margin: 0px;
    padding: 0px;
    box-sizing: border-box;
  }
  html {
    width: 100vw;
    height: 100vh;
    font-family: system-ui, sans-serif;
    color: #ddd;
    text-align: center;
    background: radial-gradient(
      ellipse 80% 80% at 50% -20%,
      rgba(120, 119, 198, 0.3),
      rgba(255, 255, 255, 0)
    );
    background-color: #0f172a;
  }
  html::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    top: 0;
    z-index: -1;

    /* Gradiente de fondo que crea la cuadrícula */
    background-image: linear-gradient(
        to right,
        rgba(79, 79, 79, 0.18) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgba(79, 79, 79, 0.18) 1px, transparent 1px);

    /* Tamaño de la cuadrícula */
    background-size: 14px 24px;

    /* Máscara radial */
    mask-image: radial-gradient(
      ellipse 60% 50% at 50% 0%,
      #000 70%,
      transparent 100%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 60% 50% at 50% 0%,
      #000 70%,
      transparent 100%
    );
  }
  body {
    display: grid;
    grid-template-rows: 5rem auto 1fr auto 5rem;
    grid-template-columns: 1fr 4fr 1fr;
    grid-template-areas:
      "header header header"
      "left-aside banner right-aside"
      "left-aside main right-aside"
      "left-aside low-content right-aside"
      "footer footer footer";
  }
  body {
    height: 100vh;
    width: 100vw;
    /* bg-slate-950 de Tailwind */
    /* Crear un pseudo-elemento que cubra todo el body */
    overflow: hidden;
    z-index: 1;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  @media (max-width: 678px) {
    body {
      grid-template-rows: 3rem 3rem 3rem 1fr 3rem 3rem 3rem;
      grid-template-columns: 1fr;
      grid-template-areas:
        "header"
        "banner"
        "left-aside"
        "main"
        "right-aside"
        "low-content"
        "footer";
    }
  }
</style>
